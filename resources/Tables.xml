<?xml version="1.0" encoding="UTF-8"?>
<database>
	<table name="Student">
		<primarykey>studentID</primarykey>
		<foreignkey>
			<field>titleID</field>
			<ref>Titles (titleID)</ref>
		</foreignkey>
		
		<attribute>
			<name>studentID</name>
			<type>INTEGER</type>
		</attribute>
		
		<attribute>
			<name>titleID</name>
			<type>INTEGER</type>
		</attribute>
		
		<attribute>
			<name>foreName</name>
			<type>VARCHAR(255)</type>
			<constraint>NOT NULL</constraint>
		</attribute>
		
		<attribute>
			<name>familyName</name>
			<type>VARCHAR(255)</type>
			<constraint>NOT NULL</constraint>
		</attribute>
		
		<attribute>
			<name>dateOfBirth</name>
			<type>DATE</type>
			<constraint>NOT NULL</constraint>
		</attribute>
	</table>
	
	<table name="Lecturer">
		<primarykey>lecturerID</primarykey>
		<foreignkey>
			<field>titleID</field>
			<ref>Titles (titleID)</ref>
		</foreignkey>
	
		<attribute>
			<name>lecturerID</name>
			<type>INTEGER</type>
		</attribute>
		
		<attribute>
			<name>titleID</name>
			<type>INTEGER</type>
		</attribute>
		
		<attribute>
			<name>foreName</name>
			<type>VARCHAR(255)</type>
			<constraint>NOT NULL</constraint>
		</attribute>
		
		<attribute>
			<name>familyName</name>
			<type>VARCHAR(255)</type>
			<constraint>NOT NULL</constraint>
		</attribute>
	</table>
	
	<table name="StudentRegistration">
		<foreignkey>
			<field>studentID</field>
			<ref>Student (studentID)</ref>
		</foreignkey>
		
		<foreignkey>
			<field>registrationTypeID</field>
			<ref>RegistrationType (registrationTypeID)</ref>
		</foreignkey>
	
		<attribute>
			<name>studentID</name>
			<type>INTEGER</type>
		</attribute>
		
		<attribute>
			<name>yearOfStudy</name>
			<type>INTEGER</type>
			<constraint>NOT NULL</constraint>
		</attribute>
		
		<attribute>
			<name>registrationTypeID</name>
			<type>VARCHAR(255)</type>
		</attribute>
	</table>
	
	<table name="StudentContact">
		<foreignkey>
			<field>studentID</field>
			<ref>Student (studentID)</ref>
		</foreignkey>
	
		<attribute>
			<name>studentID</name>
			<type>INTEGER</type>
		</attribute>
		
		<attribute>
			<name>eMailAddress</name>
			<type>VARCHAR(255)</type>
			<constraint>NOT NULL</constraint>
			<constraint>UNIQUE</constraint>
		</attribute>
		
		<attribute>
			<name>postalAddress</name>
			<type>VARCHAR(255)</type>
			<constraint>NOT NULL</constraint>
		</attribute>
	</table>
	
	<table name="NextOfKinContact">
		<foreignkey>
			<field>studentID</field>
			<ref>Student (studentID)</ref>
		</foreignkey>
	
	
		<attribute>
			<name>studentID</name>
			<type>INTEGER</type>
		</attribute>
		
		<attribute>
			<name>name</name>
			<type>VARCHAR(255)</type>
			<constraint>NOT NULL</constraint>
		</attribute>
		
		<attribute>
			<name>eMailAddress</name>
			<type>VARCHAR(255)</type>
			<constraint>NOT NULL</constraint>
		</attribute>
		
		<attribute>
			<name>postalAddress</name>
			<type>VARCHAR(255)</type>
			<constraint>NOT NULL</constraint>
		</attribute>
	</table>
	
	<table name="LecturerContact">
		<primarykey>lecturerID</primarykey>
		<foreignkey>
			<field>lecturerID</field>
			<ref>Lecturer (lecturerID)</ref>
		</foreignkey>
	
		<attribute>
			<name>lecturerID</name>
			<type>INTEGER</type>
		</attribute>
		
		<attribute>
			<name>office</name>
			<type>INTEGER</type>
			<constraint>NOT NULL</constraint>
		</attribute>
		
		<attribute>
			<name>eMailAddress</name>
			<type>VARCHAR(255)</type>
			<constraint>NOT NULL</constraint>
		</attribute>
	</table>
	
	<table name="Tutor">
		<foreignkey>
			<field>studentID</field>
			<ref>Student (studentID)</ref>
		</foreignkey>
		
		<foreignkey>
			<field>lecturerID</field>
			<ref>Lecturer (lecturerID)</ref>
		</foreignkey>
	
		<attribute>
			<name>studentID</name>
			<type>INTEGER</type>
		</attribute>
		
		<attribute>
			<name>lecturerID</name>
			<type>INTEGER</type>
		</attribute>
	</table>
	
	<table name="Titles">
		<primarykey>titleID</primarykey>
	
		<attribute>
			<name>titleID</name>
			<type>INTEGER</type>
		</attribute>
		
		<attribute>
			<name>titleString</name>
			<type>VARCHAR(255)</type>
			<constraint>NOT NULL</constraint>
			<constraint>UNIQUE</constraint>
		</attribute>
	</table>
	
	<table name="RegistrationType">
		<primarykey>registrationTypeID</primarykey>
	
		<attribute>
			<name>registrationTypeID</name>
			<type>INTEGER</type>
		</attribute>
		
		<attribute>
			<name>description</name>
			<type>VARCHAR(255)</type>
			<constraint>NOT NULL</constraint>
			<constraint>UNIQUE</constraint>
		</attribute>
	</table>
</database>

