<?xml version="1.0" encoding="UTF-8"?>
<database>
	<table name="Student">
		<attribute>
			<name>studentID</name>
			<type>INTEGER</type>
			<constraints>
				<constraint>studentID PRIMARY KEY</constraint>
			</constraints>
		</attribute>
		
		<attribute>
			<name>titleID</name>
			<type>INTEGER</type>
			<constraints>
				<constraint>FOREIGN KEY (titleID) REFERENCES Titles (titleID)</constraint>
			</constraints>
		</attribute>
		
		<attribute>
			<name>foreName</name>
			<type>VARCHAR(255)</type>
			<constraints>
				<constraint>foreName NOT NULL</constraint>
			</constraints>
		</attribute>
		
		<attribute>
			<name>familyName</name>
			<type>VARCHAR(255)</type>
			<constraints>
				<constraint>familyName NOT NULL</constraint>
			</constraints>
		</attribute>
		
		<attribute>
			<name>dateOfBirth</name>
			<type>DATE</type>
			<constraints>
				<constraint>dateOfBirth NOT NULL</constraint>
			</constraints>
		</attribute>
	</table>
	
